# Docker Compose Configuration
COMPOSE_PROJECT_NAME=rag-system

# Common Configuration
APP_ENV=development
LOG_LEVEL=debug

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# Backend Configuration
BACKEND_PORT=8080
# IMPORTANT: Generate a secure random key for production!
# Generate with: openssl rand -hex 32
SECRET_KEY=PLEASE_GENERATE_A_RANDOM_KEY_USE_openssl_rand_hex_32

# Database
DATABASE_USER=raguser
DATABASE_PASSWORD=ragpassword
DATABASE_NAME=ragdb
DATABASE_URL=postgresql://raguser:ragpassword@localhost:5432/ragdb

# MinIO Object Storage
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# Choose your LLM provider: "openai" or "azure"
LLM_PROVIDER=openai

# =============================================================================
# EMBEDDING PROVIDER CONFIGURATION
# =============================================================================
# Choose your embedding provider: "openai" or "azure"
EMBEDDING_PROVIDER=openai

# =============================================================================
# OPENAI CONFIGURATION (when LLM_PROVIDER=openai or EMBEDDING_PROVIDER=openai)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_MODEL_DIMENSIONS=3072

# =============================================================================
# AZURE OPENAI CONFIGURATION (when LLM_PROVIDER=azure or EMBEDDING_PROVIDER=azure)
# =============================================================================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-06

# Azure Embedding Configuration
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# =============================================================================
# SSL CONFIGURATION (for corporate proxy environments)
# =============================================================================
# Set to "true" to disable SSL verification (use only in development/corporate proxy)
DISABLE_SSL_VERIFICATION=false

# =============================================================================
# DOCUMENT PROCESSING / CHUNKING CONFIGURATION
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
# Chunking strategy: recursive (default), semantic, token, or sentence
CHUNKING_STRATEGY=recursive
# For semantic chunking: percentile, standard_deviation, interquartile, gradient
SEMANTIC_BREAKPOINT_TYPE=percentile
# Minimum chunk size (prevents very small chunks)
MIN_CHUNK_SIZE=100
# Note: Token-based chunking uses OPENAI_MODEL or AZURE_OPENAI_DEPLOYMENT for tokenization

# =============================================================================
# RETRIEVAL SETTINGS
# =============================================================================
MAX_RETRIEVED_DOCUMENTS=5

# =============================================================================
# FILE SETTINGS
# =============================================================================
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# FILE WATCHER SETTINGS
# =============================================================================
ENABLE_FILE_WATCHER=true
FILE_WATCHER_INTERVAL=60

# =============================================================================
# SCRAPING SETTINGS
# =============================================================================
SCRAPING_TIMEOUT=30