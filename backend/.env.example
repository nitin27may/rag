# Backend Environment Variables
APP_ENV=development
LOG_LEVEL=debug

# API Settings
SECRET_KEY=yoursecretkey
PROJECT_NAME=RAG API
API_V1_STR=/api/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag

# Vector Database Configuration
VECTOR_DB_PATH=./chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8000
USE_CHROMA_SERVER=true
PERSIST_DIRECTORY=./chroma_db

# Object Storage
MINIO_URL=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_DATA_DIR=../storage/minio

# File Watcher Settings
ENABLE_FILE_WATCHER=true
FILE_WATCHER_INTERVAL=60

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Embedding Settings
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_MODEL_DIMENSIONS=3072
EMBEDDING_MODEL_FALLBACK=sentence-transformers/all-MiniLM-L6-v2

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Settings
MAX_RETRIEVED_DOCUMENTS=5

# File Upload Settings
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760

# Scraping Settings
SCRAPING_TIMEOUT=30

# Web Server Configuration
HOST=0.0.0.0
PORT=8080
