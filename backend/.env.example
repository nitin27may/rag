# Backend Environment Variables
APP_ENV=development
LOG_LEVEL=debug

# API Settings
# IMPORTANT: Generate a secure random key for production!
# Generate with: openssl rand -hex 32
SECRET_KEY=PLEASE_GENERATE_A_RANDOM_KEY_USE_openssl_rand_hex_32
# Example (DO NOT USE): SECRET_KEY=1a2b3c4d5e6f7890abcdef1234567890fedcba0987654321abcdef1234567890
PROJECT_NAME=RAG API
API_V1_STR=/api/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag

# Vector Database Configuration
# Now using PostgreSQL with PGVector extension - no separate vector database needed!

# Object Storage
# IMPORTANT: Change these default credentials in production!
MINIO_URL=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key-min-16-chars
MINIO_SECRET_KEY=your-minio-secret-key-min-32-chars
MINIO_SECURE=False
MINIO_DATA_DIR=../storage/minio

# File Watcher Settings
ENABLE_FILE_WATCHER=true
FILE_WATCHER_INTERVAL=60

# LLM Provider Configuration
# Choose between 'openai' or 'azure'
LLM_PROVIDER=openai

# OpenAI Configuration (used when LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Azure OpenAI Configuration (used when LLM_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-05-15

# Embedding Settings
# Choose between 'openai' or 'azure'
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_MODEL_DIMENSIONS=3072
# Azure Embedding Deployment (used when EMBEDDING_PROVIDER=azure)
AZURE_EMBEDDING_DEPLOYMENT=your-embedding-deployment-name
# Fallback embedding model (local)
EMBEDDING_MODEL_FALLBACK=sentence-transformers/all-MiniLM-L6-v2

# SSL Configuration (for corporate proxy environments)
# Set to true to disable SSL verification (not recommended for production)
DISABLE_SSL_VERIFICATION=false

# Document Processing / Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
# Chunking strategy: recursive (default), semantic, token, or sentence
CHUNKING_STRATEGY=recursive
# Separators for recursive chunking (comma-separated)
# CHUNK_SEPARATORS=\n\n,\n,. , ,
# For semantic chunking: percentile, standard_deviation, interquartile, gradient
SEMANTIC_BREAKPOINT_TYPE=percentile
# Minimum chunk size (prevents very small chunks)
MIN_CHUNK_SIZE=100
# Note: Token-based chunking uses OPENAI_MODEL or AZURE_OPENAI_DEPLOYMENT for tokenization

# Retrieval Settings
MAX_RETRIEVED_DOCUMENTS=5

# File Upload Settings
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760

# Scraping Settings
SCRAPING_TIMEOUT=30

# Web Server Configuration
HOST=0.0.0.0
PORT=8080
